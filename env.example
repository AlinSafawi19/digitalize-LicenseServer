# Server Configuration
NODE_ENV=development
PORT=3000

# Database
# Connection string with connection pooling parameters
# connection_limit: Maximum connections in pool (recommended: 10 for small/medium apps, 20-50 for large apps)
# pool_timeout: Maximum time to wait for connection in seconds (recommended: 20)
# Performance optimization: Add these parameters to prevent connection pool exhaustion
# Example: postgresql://user:password@localhost:5432/digitalizePOS_licenses?connection_limit=10&pool_timeout=20
DATABASE_URL=postgresql://postgres:alin123M@localhost:5432/digitalizePOS_licenses?connection_limit=10&pool_timeout=20

# Query Performance Monitoring
# Threshold in milliseconds for slow query detection
SLOW_QUERY_THRESHOLD=1000
# Enable query performance monitoring (set to 'true' to enable in development)
ENABLE_QUERY_MONITORING=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# App Configuration
APP_NAME=DigitalizePOS License Server
APP_URL=http://localhost:3000

# Security Configuration
# Comma-separated list of allowed CORS origins (e.g., https://app.digitalizepos.com,https://admin.digitalizepos.com)
# In development, localhost origins are automatically allowed
ALLOWED_ORIGINS=https://app.digitalizepos.com,https://admin.digitalizepos.com

# Logging Configuration
# Log level: error, warn, info, verbose, debug, silly
# Production: info (recommended)
# Development: debug (recommended)
LOG_LEVEL=info

# Error Tracking (Optional)
# Sentry DSN for error tracking and monitoring
# Leave empty to disable Sentry
# Get your DSN from https://sentry.io
SENTRY_DSN=

# License Settings
INITIAL_LICENSE_PRICE=350
ANNUAL_SUBSCRIPTION_PRICE=50
GRACE_PERIOD_DAYS=0
FREE_TRIAL_DAYS=10
CACHE_VALIDITY_DAYS=14

# Email Settings (for sending activation credentials)
# Set EMAIL_ENABLED=true to enable email functionality
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=DigitalizePOS <noreply@digitalizepos.com>
# Logo URL for email templates (optional - if not provided, a styled text logo will be used)
# Recommended: Host logo as PNG/JPG and provide full URL (e.g., https://yourdomain.com/logo.png)
LOGO_URL=

